{
  "name": "opentaiko-tool",
  "version": "0.0.0",
  "private": true,
  "bin": "./dist/index.js",
  "pkg": {
    "assets": [
      "dist/assets/**/*",
      "dist/favicon.ico",
      "dist/index.html"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "bundle"
  },
  "scripts": {
    "start": "set NODE_ENV=development && npm run build-server && node ./dist/index.js",
    "dev": "vite",
    "build": "npm run build-web && npm run build-server && npm run build-exe",
    "build-web": "run-p type-check \"build-only {@}\" --",
    "build-server": "tsc -p tsconfig.server.json && tsc-alias -p tsconfig.server.json ",
    "build-exe": "pkg .",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force"
  },
  "dependencies": {
    "express": "^4.19.2",
    "iconv-lite": "^0.6.3",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.5",
    "@vicons/ionicons5": "^0.12.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/tsconfig": "^0.5.1",
    "naive-ui": "^2.38.2",
    "npm-run-all2": "^6.1.2",
    "pkg": "^5.8.1",
    "tsc-alias": "^1.8.10",
    "typescript": "~5.4.0",
    "vite": "^5.2.8",
    "vue-tsc": "^2.0.11"
  }
}
